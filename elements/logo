# vim: filetype=zsh

euclid::optics "logo" "default"
euclid::optics "logo:vicmd" "214"
euclid::optics "logo:error" "red"

euclid::data "logo" "\ufa62"

euclid::element "logo" euclid::elements::logo

euclid::elements::logo() {
  if [[ $KEYMAP = "vicmd" ]]; then
    euclid::fragment "logo:vicmd"
  else
    echo -n "%(?.$(euclid::optics "logo").$(euclid::optics "logo:error"))"
    echo -n "%(?.$(euclid::data "logo").$(euclid::data "logo:error"))"
    echo -n "%f"
  fi
}
